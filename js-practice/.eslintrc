{
  "extends": ["eslint:recommended", "airbnb-base", "plugin:jest/recommended", "prettier"],
  "env": {
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/prefer-default-export": "off",
    "no-plusplus": "off",
    "max-classes-per-file": "off"
  },
  "overrides": [
    {
      "files": ["**/*.spec.js"],
      "rules": {
        "no-undef": "warn",
        "jest/no-disabled-tests": "warn"
      }
    }
  ]
}
